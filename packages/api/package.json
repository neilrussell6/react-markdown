{
	"name": "@react-markdown/api",
	"description": "An API for the React Markdown Web UI",
	"keywords": [
		"API",
		"express",
		"markdown",
		"javascript"
	],
	"version": "0.0.0",
	"author": "Neil Russell <neilrussell6@gmail.com>",
	"license": "ISC",
	"private": true,
	"main": "src/index.js",
  "scripts": {
    "test": "dotenv -e .env.test -- jest --ci --config jest.node.config.js --verbose",
    "test:watch": "npm run test -- --watch",
    "test:ii": "dotenv -e .env.test -- jest --ci --config jest.node.ii.config.js --verbose",
    "test:ii:watch": "npm run test:ii -- --watch",
    "test:start": "docker-compose up",
    "_test:start:detached": "docker-compose up -d",
    "_test:stop": "docker-compose stop",
    "test:start:build": "docker-compose up --build",
    "_test:ii": "docker-compose run tests sh -c \"/wait && npm run migrate:test up --prefix ./packages/markdown-api && npm run test:ii --prefix ./packages/markdown-api\"",
    "_test:start-ii": "npm-run-all _test:start:detached _test:ii _test:stop",
    "_test:all": "npm-run-all test _test:start-ii",
    "_test:ci": "CI=true npm run test",
    "_test:ii:ci": "dotenv -e .env.ci -- jest --ci --config jest.node.ii.config.js --verbose",
    "_wait-test:ii:ci": "sh -c \"wait && npm run _migrate:ci up && npm run _test:ii:ci\"",
    "_test:all:ci": "CI=true npm-run-all _test:ci _wait-test:ii:ci",
    "code:format": "prettier --write .",
    "_code:lint:prettier": "prettier --check .",
    "_code:lint:eslint": "eslint .",
    "code:lint": "npm-run-all _code:lint:prettier _code:lint:eslint",
    "_git:pre-commit": "CI=true npm-run-all code:format code:lint test",
    "_git:pre-push": "CI=true npm-run-all code:format code:lint _test:all",
    "migrate": "dotenv -e .env -- node ./bin/migration.cli.js migrate",
    "migrate:dev": "dotenv -e .env.dev -- node ./bin/migration.cli.js migrate",
    "migrate:staging": "dotenv -e .env.staging -- node ./bin/migration.cli.js migrate",
    "migrate:test": "dotenv -e .env.test -- node ./bin/migration.cli.js migrate",
    "_migrate:ci": "dotenv -e .env.ci -- ./bin/migration.sh migrate",
    "migrate:create": "./bin/migration.sh create",
    "_init:env": "cp -n .env.tpl .env || true",
    "_init:env:dev": "cp -n .env.dev.tpl .env.dev || true",
    "_init:env:test": "cp -n .env.test.tpl .env.test || true",
    "_init:env:ci": "cp -n .env.ci.tpl .env.ci || true",
    "_init:env:staging": "cp -n .env.staging.tpl .env.staging || true",
    "_init:envs": "npm-run-all _init:env _init:env:dev _init:env:staging _init:env:test _init:env:ci",
    "init": "npm run _init:envs",
    "help": "package-json-help.js"
  },
	"dependencies": {
		"axios": "^0.19.2",
		"bluebird": "^3.7.2",
		"pg": "^8.2.1",
		"pg-native": "^3.0.0",
		"pg-promise": "^10.5.6",
		"ramda": "^0.27.0"
	},
	"devDependencies": {
		"babel-eslint": "^10.1.0",
		"dotenv-cli": "^3.1.0",
		"eslint": "7.2.0",
		"eslint-config-airbnb": "^18.1.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-prettier": "^3.1.3",
		"factory-girl": "^5.0.4",
		"faker": "^4.1.0",
		"jest": "^25.1.0",
		"js-parametrize": "0.0.3",
		"migrate": "^1.6.2",
		"moment": "^2.27.0",
		"npm-run-all": "^4.1.5",
		"package-json-help": "0.0.10",
		"prettier": "^2.0.5",
		"wait-on": "^5.0.1"
	},
	"publishConfig": {
		"access": "private"
	}
}
